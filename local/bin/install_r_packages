#!/usr/bin/env Rscript

# Set CRAN repo to automatic redirection. Using `getOption()` keeps
# any Rstudio Package Manager Setup from the site Rprofile.
local({
  r <- getOption("repos")
  r["CRAN"] <- "https://cloud.r-project.org/"
  options(repos = r)
})

options(
  install.packages.check.source = "no",
  install.packages.compile.from.source = "never"
)

packages_cran <- c(
  "AER",
  "DeclareDesign",
  "DesignLibrary",
  "arrow",
  "binb",
  "blastula",
  "bookdown",
  "broom",
  "caret",
  "clipr",
  "cowplot",
  "data.table",
  "datapasta",
  "devtools",
  "dichromat",
  "diffobj",
  "dineq",
  "dotenv",
  "estimatr",
  "eurostat",
  "fastDummies",
  "fixest",
  "fst",
  "future",
  "future.apply",
  "ggalluvial",
  "gghighlight",
  "ggrepel",
  "ggridges",
  "grf",
  "gridExtra",
  "gsynth",
  "here",
  "hrbrthemes",
  "huxtable",
  "huxtable",
  "ineq",
  "janitor",
  "kableExtra",
  "lfe",
  "lintr",
  "lmtest",
  "margins",
  "microbenchmark",
  "minidown",
  "optparse",
  "patchwork",
  "plm",
  "prettydoc",
  "pwr",
  "qs",
  "ragg",
  "randomizr",
  "roxygen2",
  "sandwich",
  "sjlabelled",
  "sjmisc",
  "skimr",
  "socviz",
  "stargazer",
  "sufrep",
  "svglite",
  "tesseract",
  "texreg",
  "tidyverse",
  "timeDate",
  "tinytex",
  "xtable",
  "zoo"
)

packages_github <- c(
  "svraka/asmisc",
  "svraka/aswp",
  "svraka/statoszt",
  "svraka/teroszt",
  "ThinkR-open/togglr"
)

packages_gitlab <- c()

install.packages(packages_cran)
remotes::install_github(packages_github)
remotes::install_gitlab(packages_gitlab)

if (.Platform$OS.type == "windows") {
  options(repos = c(getOption("repos"), Omegahat = "http://www.omegahat.net/R"))

  install.packages("RDCOMClient")
}
